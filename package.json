    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@typespec/compiler": "^0.53.0",
    "@typespec/openapi3": "^0.53.0",
    "@typespec/rest": "^0.53.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
